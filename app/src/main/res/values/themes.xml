<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.The_Chance_Xml_Tasks" parent="Theme.Material3.DayNight.NoActionBar"/>
    <style name="Theme.The_Chance_Xml_Tasks" parent="Base.Theme.The_Chance_Xml_Tasks" />

    <style name = "BaseRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_rounded_corner</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/doppio_one_regular</item>
    </style>

    <style name="SecondaryButton" parent="BaseRoundedButton">
        <item name="backgroundTint">@color/warm_orange</item>
        <item name="android:textColor">@color/soft_gray</item>

    </style>

    <style name="PrimaryButton" parent="BaseRoundedButton">
        <item name="backgroundTint">@color/soft_gray</item>
        <item name="android:textColor">@color/brown</item>

    </style>

    <style name="textStyle" >
        <item name="android:fontFamily">@font/doppio_one_regular</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="historyTextStyle">
        <item name="android:fontFamily">@font/doppio_one_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/historyColor</item>
        <item name="android:gravity">end</item>
    </style>

</resources>